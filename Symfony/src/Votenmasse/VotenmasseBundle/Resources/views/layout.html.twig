{% extends "::layout.html.twig" %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block body %}
	<div class = "well">
		<div align="center">
			<a href="{{ path('votenmasse_votenmasse_index') }}">
				<img src="{{ asset('img/Votenmasse.png') }}" alt="Votenmasse"/>
			</a>
		</div>
		<br>
		<div>
			<a href="{{ path('votenmasse_votenmasse_index') }}">
				<img style = "float: left; margin-right: 5px;" src="{{ asset('img/accueil.gif') }}" height = "45px" width =  "45px" alt="Home"/>
			</a>
			<ul class="nav nav-pills nav-stacked">
				<li>
					<form action="{{ path('votenmasse_votenmasse_votes') }}" method="post">
						<input type = "submit" value = "Votes" style = "margin-right: 5px; color: #5e93f0;" class="btn btn-inverse btn-large">
					</form>
					<form action="{{ path('votenmasse_votenmasse_resultats') }}" method="post">
						<input type = "submit" value = "Résultats" style = "margin-right: 5px; color: #5e93f0;" class="btn btn-inverse btn-large">
					</form>
					<form action="{{ path('votenmasse_votenmasse_groupes') }}" method="post">
						<input type = "submit" value = "Groupes" style = "margin-right: 5px; color: #5e93f0;" class="btn btn-inverse btn-large">
					</form>
					<form action="{{ path('votenmasse_votenmasse_forum') }}" method="post">
						<input type = "submit" value = "Forum" style = "margin-right: 5px; color: #5e93f0;" class="btn btn-inverse btn-large">
					</form>
					{% if utilisateur is not defined %}
						<form action="{{ path('votenmasse_votenmasse_connexion') }}" method="post">
							<span style = "float: right; margin-top: 10px;">Pseudo 
							<input style = "margin-right: 10px" class="input-mini" type="text" id="login" name="login" />
							Mot de passe 
							<input class="input-mini" type="password" id="mot_de_passe" name="mot_de_passe" style = "margin-right: 10px;" />
							<button class="btn btn-primary btn-mini" type="submit">Connexion <i class="icon-white icon-ok-sign"></i> </button></span>
						</form>
					{% endif %}
					{% if utilisateur is defined %}
						{% if utilisateur != NULL %}
							<form action="{{ path('votenmasse_votenmasse_deconnexion') }}" method="post">
								<span style = "float: right; margin-top: 10px; margin-right: 5px;"><b>{{ utilisateur }}</b>
								<button style="margin-left: 10px" class="btn btn-primary btn-mini" type="submit">Déconnexion <i class="icon-white icon-ok-sign"></i> </button></span>
							</form>
						{% endif %}
						{% if utilisateur == NULL %}
							<form action="{{ path('votenmasse_votenmasse_connexion') }}" method="post">
								<span style = "float: right; margin-top: 10px;">Pseudo 
								<input class="input-mini" type="text" id="login" name="login" style = "margin-right: 10px" />
								Mot de passe 
								<input class="input-mini" type="password" id="mot_de_passe" name="mot_de_passe" style = "margin-right: 10px;" />
								<button class="btn btn-primary btn-mini" type="submit">Connexion <i class="icon-white icon-ok-sign"></i> </button></span>
							</form>
						{% endif %}
					{% endif %}
				</li>
			</ul>
		</div>
	</div>

  <hr>

  {% block votenmasse_body %}
  {% endblock %}
  
  <hr>
  
{% endblock %}